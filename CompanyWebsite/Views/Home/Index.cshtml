<div class="full" id="section-contact">
    <br />
    <br />
    <br />
    <p class="lead" id="services-title">
        Where We Are
    </p>
    <p class="services-description">
        Contact us and let us answer any of your questions
    </p>
    <br />
    <br />
    <div class="row" id="contact-row">
        <div class="col-md-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <table>
                    <tr>
                        <td>
                            @Html.TextBoxFor(m => m.FromName, new { placeholder = "Your Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </td>
                    </tr>
                    <tr class="blank-row"><td></td></tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(m => m.FromEmail, new { placeholder = "Your Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </td>
                    </tr>
                    <tr class="blank-row"><td></td></tr>
                    <tr>
                        <td>
                            @Html.TextAreaFor(m => m.Message, new { placeholder = "Your Message", id = "form-message", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </td>
                    </tr>
                    <tr class="blank-row"><td></td></tr>
                    <tr>
                        <td>
                            <input id="submit-button" type="submit" class="btn btn-primary btn-group-sm" value="Submit" />
                        </td>
                    </tr>
                </table>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
        <div class="col-md-5">
            <table>
                <tr>
                    <td class="address">
                        <span class="contact-bold">Address</span><br />
                        50 St. Clair Ave East, 3rd Floor<br />
                        Toronto, ON Canada M4T 1M9<br />
                        <br />
                        <span class="contact-bold">Phone</span><br />
                        416-533-3777<br />
                        <br />
                        <span class="contact-bold">Email</span><br />
                        sales@reainc.net<br />
                        support@reainc.net<br />
                        webmaster@reainc.net<br />
                        <br />
                        <span class="contact-bold">Hours</span><br />
                        Monday - Friday: 9AM - 5:30 PM
                    </td>
                </tr>
            </table>
        </div>
    </div>
