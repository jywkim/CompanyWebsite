@model CompanyWebsite.Models.EmailFormModel

@{
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a class="navbar-item" href="#section-home">Home</a>
    <a class="navbar-item" href="#section-portfolio">Portfolio</a>
    <a class="navbar-item" href="#section-clients">Clients</a>
    <a class="navbar-item" href="#section-products">Products</a>
    <a class="navbar-item" href="#section-services">Services</a>
    <a class="navbar-item" href="#section-contact">Contact</a>
    @if (Session["userID"] != null)
    {
        <a href="@Url.Action("Logout", "Login")">Logout</a>
    }
    else
    {
        <a href="@Url.Action("Index", "Login")">Login</a>
    }

    <div class="nav-footer">
        We Get I.T.<br />
        <img src="~/Content/Images/Rea50.jpg" />
    </div>
</div>

<div id="menu-box" onclick="openNav()">
    <span id="menu-text">MENU</span>
    <i class="fas fa-bars fa-2x" id="menu-icon"></i>
</div>

<div class="full" id="section-home">

    <div class="jumbotron" id="jumbotron-home">
        <p class="lead" id="home-paragraph">
            Message Sent!
        </p>
        <p><a href="../Practice/Demo" class="btn btn-primary btn-lg">Back &raquo;</a></p>
    </div>

</div>

<style>
    @@font-face {
        font-family: 'SFProDisplay-Light';
        src: url('/fonts/SF/SFProDisplay-Light.ttf') format("truetype");
    }

    * {
        font-family: 'SFProDisplay-Light';
    }

    .jumbotron {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top left;
    }

    /*SECTION JUMBOTRONS*/
    #jumbotron-home {
        background-image: url(../Content/Images/Jumbotron/PC3.jpg);
        height: 100%;
        background-attachment: fixed;
    }

    /*HOME AND CAREERS COLUMNS*/
    h3, p.follow {
        text-align: center;
    }

    #home-paragraph {
        font-size: 4rem;
    }

    /* SIDE NAV MENU */
    #menu-box {
        position: fixed;
        left: 90%;
        top: 5%;
        z-index: 1;
        color: white;
        width: 110px;
        padding: 5px 10px 1px 10px;
        cursor: pointer;
    }

        #menu-box:hover {
            color: black;
        }

    #menu-text {
        vertical-align: super;
        padding-right: 15px;
    }

    .nav-footer {
        color: #337ab7;
        margin: auto;
        display: table;
        position: absolute;
        bottom: 10%;
        text-align: center;
        right: 20%;
    }

    .sidenav {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 2;
        top: 0%;
        right: 0%;
        background-color: white;
        overflow-x: hidden;
        transition: 0.5s;
    }

        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 20px;
            color: #337ab7;
            display: block;
            transition: 0.3s;
        }

            .sidenav a:hover {
                color: white;
                background-color: #337ab7;
            }

        .sidenav .closebtn {
            /*position: absolute;*/
            /*top: 0;*/
            /*right: 25px;*/
            font-size: 36px;
            /*margin-left: 50px;*/
        }

    @@media screen and (max-height: 450px) {
        .sidenav {
            padding-top: 15px;
        }

            .sidenav a {
                font-size: 15px;
            }
    }

    .row {
        padding-left: 10%;
        padding-right: 10%;
    }
</style>

<script src="http://code.jquery.com/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }

    $(function () {
        $('.navbar-item').bind('click', function (event) {
            event.preventDefault();
            var $anchor = $(this);
            console.log($anchor.attr('href'))
            $('html, body').stop().animate({
                scrollTop: $($anchor.attr('href')).offset().top
            }, 1000);
            event.preventDefault();
        });
    });

    $(function () {
        $(document).on('click', function (e) {
            if (e.target.id != 'menu-box' && e.target.id != 'menu-text' && e.target.id != 'menu-icon') {
                closeNav();
            }
        })
    });
</script>